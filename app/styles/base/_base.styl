// - Variables imports
@import 'base/_base_variables'



// -------------------
// #ELEMENTS-BASE-STYLES
// -------------------

* {
    box-sizing border-box
}

a, a:visited, a:hover, a:active {
  color inherit
  text-decoration none
}

h1, h2, h3, h4, h5, h6, p{
    margin 0
    padding 0
    border 0
    font-size 100%
}

h1 {
    font-size responsive $main-title-range
    font-range $min-screen-size $max-screen-size
}

h2 {
    font-size responsive $secondary-title-range
    font-range $min-screen-size $max-screen-size
}

h3 {
    font-size responsive $tertiary-title-range
    font-range $min-screen-size $max-screen-size
}

h4 {
    font-size responsive $sub-title-range
    font-range $min-screen-size $max-screen-size
}

section {
    padding 50px 0
    @media only screen and (min-width: 768px) {
        padding 80px 50px
    }
}



// -------------------
// #ESTILOS GENERICOS PARA TEXTOS
// -------------------

h1.main-title, h2.secondary-title, h3.terciary-title {
    text-align center
    width 100%
}

h1.main-title {
    margin-bottom 1rem
}

h2.secondary-title {
    margin-bottom 1rem
}

h3.terciary-title {
    margin-bottom 0.2rem
}

h4.sub-title {
    text-transform uppercase
    font-weight 300
}

p.main-description {
    font-size responsive $main-description-range
    font-range $min-screen-size $max-screen-size
    line-height 1.48
}

p.secondary-description {
    font-size responsive $secondary-description-range
    font-range $min-screen-size $max-screen-size
    text-transform uppercase
}

p.normal-text, 
label.normal-text, 
textarea.normal-text, 
input.normal-text {
    font-size responsive $normal-text-range
    font-range $min-screen-size $max-screen-size
}

p.small-text {
    font-size responsive $small-text-range
    font-range $min-screen-size $max-screen-size
}



// -------------------
// #VERTICAL-RULE
// -------------------

.column.vr {
    @media screen and (min-width: 64em) {
        border-right 1px solid #ddd
    }
}