* {
    box-sizing border-box
}

body {  
    background-color white
    font-size 16px
    font-family 'Lato', sans-serif
    line-height 1.6
    -webkit-font-smoothing: antialiased
    -webkit-text-size-adjust: 100%   
}

h1, h2, h3, h4, h5, h6 {
    margin 0
    padding 0
    border 0
    font-size 100%
    vertical-align baseline
}