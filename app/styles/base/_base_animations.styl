// -------------------
// @GENERIC ANIMATED CLASS
// -------------------

.animated {
  animation-duration 1s
  animation-fill-mode both
}



// -------------------
// @FADE-IN-UP-ALBUM
// -------------------

@-webkit-keyframes fadeInUpAlbum {
  0% {
    opacity: 0;
    transform: translateY(30px);
  }
  
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.fadeInUpAlbum {
  animation-name fadeInUpAlbum
}



// -------------------
// @WIDTH-LEFT-TO-RIGHT
// -------------------

@keyframes widthLeftToRight {
  from {
    width 0%
  }

  to {
    width 100%
  }
}