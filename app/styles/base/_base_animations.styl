// -------------------
// @GENERIC ANIMATED CLASS HELPERS
// -------------------

.animated {
  animation-duration 1s
  animation-fill-mode both
}

.animated.infinite {
  animation-iteration-count infinite
}



// -------------------
// @FADE-IN-UP-ALBUM
// -------------------

@-webkit-keyframes fadeInUpAlbum {
  0% {
    opacity: 0;
    transform: translateY(30px);
  }
  
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.fadeInUpAlbum {
  animation-name fadeInUpAlbum
}



// -------------------
// @SLIDE-DOWN-UP
// -------------------

@-webkit-keyframes slideDownUp {
  0% {
    transform: translate3d(0, 0, 0);
  }

  50% {
    transform: translate3d(0, -40%, 0);
  }

  100% {
    transform: translate3d(0, 0, 0);
  }
}

.slideDownUp {
  animation-name: slideDownUp;
}



// -------------------
// @WIDTH-LEFT-TO-RIGHT
// -------------------

@keyframes widthLeftToRight {
  from {
    width 0%
  }

  to {
    width 100%
  }
}