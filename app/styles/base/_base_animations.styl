// -------------------
// @GENERIC ANIMATED CLASS HELPERS
// -------------------

.animated {
    animation-duration 1s
    animation-fill-mode both
}

.animated.infinite {
    animation-iteration-count infinite
}



// -------------------
// @FADE-IN-UP-ALBUM
// -------------------

@keyframes fadeInUpAlbum {
    0% {
        opacity 0
        transform translateY(30px)
    }
  
    100% {
        opacity 1
        transform translateY(0)
    }
}

.fadeInUpAlbum {
    animation-name fadeInUpAlbum
}



// -------------------
// @FADE-IN-SCALE
// -------------------

@keyframes fadeInScale {
    0% {
        opacity 0
        transform scale(5)
    }
    100% {
        opacity 1
        transform scale(1)
    }
}

.fadeInScale {
    animation-name fadeInScale
}



// -------------------
// @SLIDE-DOWN-UP
// -------------------

@keyframes slideDownUp {
    0% {
        transform translateY(0)
    }

    50% {
        transform translateY(-40%)
    }

    100% {
        transform translateY(0)
    }
}

.slideDownUp {
    animation-name slideDownUp
}



// -------------------
// @FADE-IN
// -------------------

@keyframes fadeIn {
    from {
        opacity 0
    }

    to {
        opacity 1
    }
}

.fadeIn {
    animation-name fadeIn
    animation-duration 2s
    animation-fill-mode both
    animation-delay 1s
}



// -------------------
// @SHAKE
// -------------------

@keyframes shake {
  from, to {
    transform translate3d(0, 0, 0)
  }

  10%, 30%, 50%, 70%, 90% {
    transform translate3d(-10px, 0, 0)
  }

  20%, 40%, 60%, 80% {
    transform translate3d(10px, 0, 0)
  }
}

.shake {
  animation-name shake
}



// -------------------
// @WIDTH-LEFT-TO-RIGHT
// -------------------

@keyframes widthLeftToRight {
    from {
        width 0%
    }

    to {
        width 100%
    }
}