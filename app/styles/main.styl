// -------------------
// @PAGE-CONTENT
// -------------------

.page-content {
    width 100%
}



// -------------------
// @SECTION-INTRO
// -------------------

.section-intro {
    background white url('img/agsquare_@2X.png')
    min-height 80vh
    .section-intro__logo {
        display block
        margin auto
        margin-bottom 20px
        padding-left 0.625rem
        padding-right 0.625rem
        width 100%
        max-width 400px
        @media screen and (min-width: 40em) {
            margin-bottom 40px
        }
    }
    .section-intro__txt {
        text-align center
        width 70%
        margin auto
    }
}



// -------------------
// @CONTACTO
// -------------------

.contacto {
    background-color white
    text-align center
    .contacto__titulo {
        @media screen and (min-width: 40em) {
            margin-bottom 1rem   
        }
        @media screen and (min-width: 64em) {
            margin-bottom 4rem
        }
    }
    .contacto__normal-text{
        margin 20px 0
        @media screen and (min-width: 40em) {
            margin-top 2rem   
        }
        @media screen and (min-width: 64em) {
            margin-top 1rem
        }
    }
    .contact-form {
        margin-top 2rem
        @media screen and (min-width: 40em) {
            margin-top 3rem
        }
        @media screen and (min-width: 64em) {
            margin-top 0
        }
    }
}



// -------------------
// @CONTACTO-ITEM
// -------------------

.contacto-item {
    margin-top 10px
    .contacto-item__title{
        color $green-logo
        font-weight 400
    }
    @media screen and (min-width: 64em) {
        margin 0
        margin-bottom 2rem
    }
}



// -------------------
// @CONTACTO-SOCIAL
// -------------------

.contacto-social {
    justify-content center
    .contacto-social__item {
        flex none
    }
}



// -------------------
// @PAGE-FOOTER
// -------------------

.page-footer {
    color white
    background-image url(img/footer.png)
    padding 20px 10px
    text-align center
    .page-footer__logo {
        width 100px
    }
    .small-text {
        margin-top 10px
    }
    .referenceLink {
        color $teal-logo
        text-decoration underline
    }
}














