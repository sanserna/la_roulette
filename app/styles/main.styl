// -------------------
// @PAGE-CONTENT
// -------------------

.page-content {
    width 100%
}



// -------------------
// @SECTION-INTRO
// -------------------

.section-intro {
    background white url('img/agsquare_@2X.png')
    min-height 80vh
    .section-intro__logo {
        display block
        margin auto
        margin-bottom 20px
        padding-left 0.625rem
        padding-right 0.625rem
        width 100%
        max-width 400px
        @media screen and (min-width: 40em) {
            margin-bottom 40px
        }
    }
    .section-intro__txt {
        text-align center
        width 70%
        margin auto
    }
}



// -------------------
// @CONTACTO
// -------------------

.contacto {
    background white url('img/assets/square_bg_@2X.png')
    background-color white
    text-align center
    .row {
        margin 0
    }
    .contacto__titulo {
        @media screen and (min-width: 40em) {
            margin-bottom 1rem
        }
        @media screen and (min-width: 64em) {
            margin-bottom 4rem
        }
    }
    .contacto__normal-text{
        padding 20px 0
        @media screen and (min-width: 40em) {
            padding 1.5rem 0
        }
        @media screen and (min-width: 64em) {
            padding 1rem 0
        }
    }
    .contacto__item {
        padding 10px 0
        h2 {
            color $green-logo
            font-weight 400
        }
        @media screen and (min-width: 64em) {
            padding 1rem 0
        }
    }
    .contacto__social {
        justify-content center
        padding 10px 0
        > div {
            flex none
        }
        img {
            border-radius 50%
            max-width 60px
            transition 0.3s background-color ease-in
            &[src*=facebook]:hover {
                background-color #3B5998
            }
            &[src*=twitter]:hover {
                background-color #55ACEE
            }
            &[src*=instagram]:hover {
                background-color #125688
            }
        }
    }
    .contact-form {
        margin-top 2rem
        @media screen and (min-width: 40em) {
            margin-top 3rem
        }
        @media screen and (min-width: 64em) {
            margin-top 0
        }
    }
}



// -------------------
// @PAGE-FOOTER
// -------------------

.page-footer {
    color white
    background-image url(img/assets/footer.png)
    padding 20px 10px
    text-align center
    .page-footer__logo {
        width 100px
    }
    .small-text {
        margin-top 10px
    }
    .referenceLink {
        color $teal-logo
        text-decoration underline
    }
}














