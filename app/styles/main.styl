// Tus estilos van aqui
#video-container {
    min-height 100vh
    overflow hidden
    position relative
    max-height 100vh
    width 100%
    #video {
        height 100vh
        width 100%
    }
    .logo-bg {
        position absolute
        top 0
        left 0
        height 100%
        width 100%
        background rgba(black,.1) url(../img/pattern.png)
        z-index 0
    }
    .lr-logo {
        area()
        position absolute
        width 20%
        left 50%
        margin-left -35%
        top 75px
        z-index 1
    }
}

.page-content {
    height 1000px
    background rgba(red,.1)
}




















