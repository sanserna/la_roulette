// -------------------
// @ALBUM
// -------------------

.album {
    box-shadow 0 2px 2px 1px rgba(black,.3)
    cursor pointer
    // display flex
    // flex-direction column
    // align-items flex-end
    // justify-content center
    overflow hidden
    height 200px
    position relative
    max-width 350px
    margin auto
    &, .album__title, .album__date {
        transition 0.3s ease-out-cubic
    }
    .album__title {
        background rgba(29,29,33,.7)
        color white
        padding 5px 10px
        position absolute
        bottom 0
        left 0
        width 100%
    }
    .album__date {
        background rgba(white,.7)
        color $blackBG
        padding 2px 20px
    }
    &:hover {
        transform scale(1.02)
        .album__title {
            background rgba(29,29,33,1)
        }
        .album__date {
            background rgba(white,1)
        }
    }
    @media screen and (min-width: 40em) {
        max-width none
    }
    @media screen and (min-width: 64em) {
        height 250px
    }
}







