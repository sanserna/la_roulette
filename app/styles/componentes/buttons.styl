// -------------------
// @BUTTONS
// -------------------

// - General button style (reset)

.btn {
    border none
    background none
    cursor pointer
    padding 20px
    display inline-block
    margin 15px 0
    text-transform uppercase
    letter-spacing 1px
    font-weight 700
    outline none
    transition all 0.3s
    z-index 1
    max-width 350px
}

// - btn-sliding-bg

.btn-sliding-bg {
    color white
    border 3px solid white
    box-shadow inset 0 0 0 0 white
    transition all 0.3s ease-in
    &:hover {
        color black
        box-shadow inset 0 100px 0 0 white
    }
}









