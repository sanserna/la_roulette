// -------------------
// @CARTA-COCTELES
// -------------------

.carta-cocteles {
    background-color rgba(black, .8)
    display none
    justify-content center
    align-items center
    padding 20px 10px
    position fixed
    top 0px
    left 0px
    z-index 1000
    width 100%
    height 100vh
    .carta-cocteles__img-container {
        width 90%
        background-color black
        text-align center
        position relative
        div {
            background-color white
            width 100%
            display inline-block
            display none
            img {
                width 100%
            }
        }
        .carta-cocteles__next,
        .carta-cocteles__prev,
        .carta-cocteles__close {
            position absolute
            color white
            background-color rgba(black,0.5)
            transition 0.5s
            &:hover {
                background-color rgba(black,1)
            }
        }
        .carta-cocteles__next,
        .carta-cocteles__prev {
            background-repeat no-repeat
            background-size 20px 20px
            background-position 50% 50%
            padding 0
            height 70px
            top calc(50% - 50px)
            width 50px
        }
        .carta-cocteles__next,
        .carta-cocteles__close {
            right 0px
        }
        .carta-cocteles__close {
            padding 10px 15px
            font-size 2rem
        }
        .carta-cocteles__prev {
            background-image url('img/assets/flechaIzq.png')
            left 0px
        }
        .carta-cocteles__next {
            background-image url('img/assets/flechaDer.png')
        }
        @media screen and (min-width: 40em) {
            width 353px
        }
        @media screen and (min-width: 64em) {
            width 420px 
        }
        @media screen and (min-width: 120em) {
            width 556px   
        }
    }
}