// -------------------
// @SERVICIO-CONTENT-ITEM
// -------------------

.servicio-content-item {
    display flex
    flex-direction column
    justify-content flex-end
    color white
    min-height 50vh
    padding 10px
    position relative
    p, h1, h2 {
        flex none
        z-index 1
    }
    .overlayed-bg {
        background-image url(img/assets/pattern.png)
        background-color rgba(black,.2)
        // background linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0) 20%,rgba(0,0,0,1) 100%)
    }
    .servicio-content-item__titulo {
        font-weight bold
    }
    .servicio-content-item__descripcion {
        margin 0px
        text-align left
        font-weight 300
        max-width 900px
    }
    @media screen and (min-width: 40em) {
        min-height 70vh
        padding 20px 50px 20px 20px
    }
    @media screen and (min-width: 64em) {
        min-height 100vh
        padding 30px 70px 30px 30px
    }
}

.servicio-content-item--center {
    justify-content center
    align-items center
    padding 50px 20px
    .servicio-content-item__titulo {
        padding-bottom 20px
    }
    .servicio-content-item__descripcion {
        text-align center
        max-width none
        @media screen and (min-width: 40em) {
            padding-left 50px
            padding-right 50px
        }
        @media screen and (min-width: 64em) {
            padding-left 150px
            padding-right 150px
        }
        @media screen and (min-width: 120em) {
            padding-left 450px
            padding-right 450px
        }
    }
}