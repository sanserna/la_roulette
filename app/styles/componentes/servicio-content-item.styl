// - Base imports
@import 'base/_base_variables'
@import 'base/_base_mixins'



// -------------------
// @SERVICIO-CONTENT-ITEM
// -------------------

.servicio-content-item {
    padding 0
    .overlayed-bg {
        background-image url(img/assets/pattern.png)
        background-color rgba(black,.1)
    }
    .servicio-content-item__descripcion {
        background-position 50% 50%
        background-repeat no-repeat
        background-size cover
        display flex
        flex-direction column
        justify-content flex-end
        color white
        height 80vh
        padding 0px 10px 20px 20px
        position relative
        p {
            flex none
            z-index 1
        }
        .item-description-big {
            color $yellow-logo
            font-weight 400
        }
        .big-description {
            margin 0px
            text-align left
            font-weight 400
            max-width 900px
        }
        @media screen and (min-width: 40em) {
            padding 0px 40px 40px 40px
        }
    }
}