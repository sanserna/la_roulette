.servicio {
    background-color $silver
    height 30vh
    display flex
    align-items center
    flex-direction column
    justify-content center
    position relative
    transition 0.5s ease-in
    .servicio__titulo {
        margin 0
        transition 0.3s ease-in-out
        text-transform uppercase
    }
    .servicio__image-filter {
        background-color rgba(black,.2)
        position absolute
        top 0px
        left 0px
        height 100%
        width 100%
        z-index 0
        transition 0.3s ease-in-out
    }
    .servicio__titulo, .servicio__descripcion {
        z-index 1
        text-shadow 0 1px 2px rgba(black,0.6)
    }
    .servicio__titulo{
        color white
        line-height 1.3
        font-weight 700
    }
    .servicio__descripcion {
        color white
        text-align center
        width 90%
    }
    &:hover {
        .servicio__image-filter {
            background-color rgba(black,.5)
        }
        .servicio__titulo {
            color $purple-logo
            padding-bottom 15px
        }
    }
    &:active {
        .servicio__image-filter {
            background-color rgba(black,.5)
        }
        .servicio__titulo {
            color $purple-logo
            padding-bottom 15px
        }
    }
    @media screen and (min-width: 35em) and (orientation: landscape) {
        height 40vh
    }
    @media screen and (min-width: 40em) and (orientation: portrait) {
        height 20vh
    }
    @media screen and (min-width: 64em) {
        height 40vh
        filter grayscale(100%)
        &:hover {
            filter grayscale(0)
        }
    }
}

