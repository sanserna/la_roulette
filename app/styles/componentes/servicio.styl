.servicio {
    height 30vh
    display flex
    align-items center
    flex-direction column
    justify-content center
    position relative
    &:hover {
        .servicio__titulo {
            color $purple-logo
        }
    }
    &:active {
        .servicio__titulo {
            color $purple-logo
        }
    }
    .servicio__titulo {
        margin 0
        transition 0.3s color
    }
    .servicio__image-filter {
        background-color rgba(black,.6)
        position absolute
        top 0px
        left 0px
        height 100%
        width 100%
        z-index 0
    }
    .servicio__titulo, .servicio__descripcion {
        z-index 1
    }
    .servicio__titulo{
        color white
        line-height 1.3
        font-weight 700
    }
    .servicio__descripcion {
        color white
        text-align center
        width 90%
    }
    @media screen and (min-width: 40em) {
        height 40vh
    }
}

