// -------------------
// @PAGE-CONTENT
// -------------------

.page-content--travel-infusion {
    &,
    .frase-animada,
    .items-wrapper,
    .item-divider {
        background-color $blackMed
    }
    .frase-animada {
        h1 {
            color white
        }
    }
    .items-wrapper {
        padding 0
    }
    .btn-sliding-bg {
        &:hover {
            color $travel-infusion-primary-color
        }
    }
    .servicio-content-item {
        .servicio-content-item__titulo {
            color $travel-infusion-primary-color
        }
    }
    .section-header {
        &:after {
            background-color $travel-infusion-primary-color
        }
    }
    .item-divider:last-child {
        background-color $blackBG
    }
}
