/** TABLA DE CONTENIDOS
 *
 * SECCIONES
 * #main-header.................Contenedor del video del landing page y sus elementos.
 * .content.....................Contenedor principal.
 * .servicios...................Contenedor de los servicios del home
 * .videos-promocionales........Seccion que contiene videos promocionales
 * .galeria.....................Seccion que contiene la galeria de imagenes
 * .about.......................Seccion sobre la empresa
 */
 


// - Base imports
@import 'base/_base_variables'
@import 'base/_base_mixins'



// -------------------
// @PAGE-CONTENT
// -------------------

.page-content--inicio {
    .frase-animada {
        h1 {
            color $blackMed
        }
    }
}



// -------------------
// @MAIN-HEADER
// -------------------

#main-header {
    box-sizing content-box
    height 100vh
    overflow hidden
    position relative
    width 100%
    #main-header__bg {
        height 100vh
        position relative
        width 100%
        .img-bg {
            background black url(../img/inicio/inicio-header-bg.jpg) 50% 50% no-repeat
            background-size cover
            height 100%
            width 100%
            position absolute
            top 0px
            z-index -1
        }
    }
    .main-header__overlayed-bg,
    .main-header__lr-logo,
    .main-header__title,
    .main-header__hand-icon {
        position absolute
        top 0px
    }
    .main-header__overlayed-bg,
    .main-header__lr-logo,
    .main-header__title {
        left 0px
    }
    .main-header__overlayed-bg {
        height 100%
        width 100%
        background rgba(black,.2) url(img/assets/pattern.png)
        z-index 0
    }
    .main-header__lr-logo {
        width 50%
        max-width 300px
        z-index 1
        @media only screen and (min-device-width : 320px) and (orientation : landscape) {
            width 40%
        }
    }
    .main-header__hand-icon {
        background-image url(img/assets/hand_icon.png)
        background-size 50px 50px
        background-repeat no-repeat
        left calc(50% - 25px)
        height 50px
        width 50px
    }
    &:after {
        content ''
        display block
        position absolute
        left 0px
        bottom 0px
        height 7px
        background-color $purple-logo
        width 100%
    }
}



// -------------------
// @SERVICIOS
// -------------------

.servicios {
    background-color $blackBG
    .servicios__titulo {
        color $purple-logo
        margin 0
        text-align left
    }
    .servicios__descripcion {
        color white
        font-weight 300
        margin-bottom 1.5rem
    }
    .row {
        .column {
            padding 5px
        }
    }
}



// -------------------
// @GALERIA
// -------------------

.galeria {
    background-color $silver
    .section-title {
        margin 0
        padding 10px 0
    }
    .section-description {
        text-align center
    }
    .photo-albums {
        padding-top 30px
        padding-bottom 30px
    }
}



// -------------------
// @VIDEOS-PROMOCIONALES
// -------------------

.videos-promocionales {
    background-color $silver
    width 100%
    padding-left 10px
    padding-right 10px
    .plyr {
        @media screen and (max-width: 425px) {
            .plyr__controls {
                display none
            }
        }
    }
    @media screen and (min-width: 590px) {
        padding-left 20px
        padding-right 20px
    }    
    @media screen and (min-width: 40em) {
        padding-left 0
        padding-right 0
    }
}



// -------------------
// @ABOUT
// -------------------

.about {
    background-color $blackBG
    .about__titulo {
        color $yellow-logo
        margin 0
    }
    .about__descripcion {
        color white
        font-weight 300
        padding-bottom 1.5rem
        text-align center
    }
}