// -------------------
// @PAGE-CONTENT
// -------------------

.page-content--cocktail-box {
    .frase-animada {
        background-color white
        h1 {
            color $blackMed
        }
    }
    .items-wrapper {
        padding 0
    }
    .item-divider {
        background-color white
    }
    .servicio-content-item {
        .servicio-content-item__titulo {
            color $cocktail-box-primary-color
        }
        .servicio-content-item__descripcion {
            a {
                text-decoration underline
                color $cocktail-box-primary-color
            }
        }
    }
    .item-divider:last-child {
        background-color $blackBG
    }
    @media screen and (max-width: 39.9375em) {
        .column.small-12 {
            .servicio-content-item {
                padding-top aspect-ratio(9,13)
            }
        }
    }
}
