// -------------------
// @PAGE-CONTENT
// -------------------

.page-content--home-party {
    &,
    .frase-animada,
    .items-wrapper,
    .item-divider {
        background-color $blackMed
    }
    .frase-animada {
        h1 {
            color white
        }
    }
    .items-wrapper {
        padding 0
    }
}



// -------------------
// @FRASE-RESERVA
// -------------------

.frase-reserva {
    background-color $blackMed
    color white
    min-height 100vh
    p {
        font-weight 300
        text-align center
    }
    p:nth-child(4) {
        color $home-party-primary-color
        font-weight 400
    }
}