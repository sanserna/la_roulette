// -------------------
// @PAGE-CONTENT
// -------------------

.page-content--home-party {
    &,
    .frase-animada,
    .items-wrapper,
    .item-divider {
        background-color $blackMed
    }
    .frase-animada {
        h1 {
            color white
        }
    }
    .items-wrapper {
        padding 0
    }
}



// -------------------
// @FRASE-RESERVA
// -------------------

.frase-reserva {
    background-color $blackMed
    color white
    min-height 100vh
    p {
        text-align center
    }
    p:nth-child(1) {
        padding 20px 10px
    }
    p:nth-child(3) {
        color $yellow-logo
        font-weight 400
    }
}